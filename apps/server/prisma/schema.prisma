generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  username     String        @unique
  password     String?
  fridge       Fridge?       @relation
  savedRecipes SavedRecipe[]
}

model Fridge {
  id          String       @id @default(uuid())
  user        User         @relation(fields: [userId], references: [id])
  userId      String       @unique
  ingredients Ingredient[]
}

model Ingredient {
  id      String    @id @default(uuid())
  name    String    @unique
  amount  String?
  expDate DateTime?
  fridges Fridge[]
}

model SavedRecipe {
  id           String  @id @default(uuid())
  user         User    @relation(fields: [userId], references: [id])
  userId       String
  title        String
  description  String?
  ingredients  Json
  instructions Json
  imageUrl     String?
}
